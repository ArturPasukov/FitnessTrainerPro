<Window x:Class="FitnessTrainerPro.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrainerPro.UI"
        xmlns:converters="clr-namespace:FitnessTrainerPro.UI.Converters" <!-- ДОБАВЛЕНО ЭТО ПРОСТРАНСТВО ИМЕН -->
        mc:Ignorable="d"
        Title="Фитнес-трекер для тренера" Height="450" Width="800" Loaded="Window_Loaded">

    <Window.Resources> <!-- ДОБАВЛЕН ЭТОТ РАЗДЕЛ С РЕСУРСАМИ -->
        <converters:IsNullOrEmptyStringConverter x:Key="IsNullOrEmptyStringConverter"/>
        <converters:IsNotNullOrEmptyToBoolConverter x:Key="IsNotNullOrEmptyToBoolConverter"/>
    </Window.Resources>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="AddExerciseButton" Content="Добавить" Width="100" Margin="5" Click="AddExerciseButton_Click"/>
            <Button Name="EditExerciseButton" Content="Редактировать" Width="100" Margin="5" Click="EditExerciseButton_Click"/>
            <Button Name="DeleteExerciseButton" Content="Удалить" Width="100" Margin="5" Click="DeleteExerciseButton_Click"/>
        </StackPanel>

        <ListView Name="ExercisesListView" DockPanel.Dock="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ExerciseID}" Width="40"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="130"/>
                    <GridViewColumn Header="Группа мышц" DisplayMemberBinding="{Binding MuscleGroup}" Width="100"/>
                    
                    <!-- ИЗМЕНЕННЫЙ СТОЛБЕЦ ДЛЯ URL ВИДЕО -->
                    <GridViewColumn Header="URL Видео" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <!-- Этот TextBlock будет виден, если VideoUrl ПУСТОЙ (скрываем Hyperlink) -->
                                <TextBlock Text="{Binding VideoUrl}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VideoUrl, Converter={StaticResource IsNullOrEmptyStringConverter}}" Value="False">
                                                    <!-- Если VideoUrl НЕ пустой, скрываем этот TextBlock -->
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Этот Hyperlink будет виден, если VideoUrl НЕ ПУСТОЙ -->
                                <Hyperlink NavigateUri="{Binding VideoUrl}" RequestNavigate="Hyperlink_RequestNavigate"
                                           IsEnabled="{Binding VideoUrl, Converter={StaticResource IsNotNullOrEmptyToBoolConverter}}">
                                    <Hyperlink.Style>
                                        <Style TargetType="Hyperlink">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding VideoUrl, Converter={StaticResource IsNullOrEmptyStringConverter}}" Value="False">
                                                     <!-- Если VideoUrl НЕ пустой, показываем Hyperlink -->
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Hyperlink.Style>
                                    <TextBlock Text="{Binding VideoUrl}" />
                                </Hyperlink>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    
                    <GridViewColumn Header="Инвентарь" DisplayMemberBinding="{Binding EquipmentNeeded}" Width="100"/> 
                    
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>