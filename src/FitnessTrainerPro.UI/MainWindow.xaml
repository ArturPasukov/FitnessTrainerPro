<Window x:Class="FitnessTrainerPro.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrainerPro.UI"
        mc:Ignorable="d"
        Title="Фитнес-трекер для тренера" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Name="AddExerciseButton" Content="Добавить" Width="100" Margin="5" Click="AddExerciseButton_Click"/>
            <Button Name="EditExerciseButton" Content="Редактировать" Width="100" Margin="5" Click="EditExerciseButton_Click"/>
            <Button Name="DeleteExerciseButton" Content="Удалить" Width="100" Margin="5" Click="DeleteExerciseButton_Click"/>
        </StackPanel>

        <ListView Name="ExercisesListView" DockPanel.Dock="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ExerciseID}" Width="40"/>
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="130"/>
                    <GridViewColumn Header="Группа мышц" DisplayMemberBinding="{Binding MuscleGroup}" Width="100"/>
                    
                    <!-- НАЧАЛО ДОБАВЛЕННЫХ СТОЛБЦОВ -->
                    <GridViewColumn Header="URL Видео" DisplayMemberBinding="{Binding VideoUrl}" Width="130"/>
                    <GridViewColumn Header="Инвентарь" DisplayMemberBinding="{Binding EquipmentNeeded}" Width="100"/> 
                    <!-- КОНЕЦ ДОБАВЛЕННЫХ СТОЛБЦОВ -->
                    
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>