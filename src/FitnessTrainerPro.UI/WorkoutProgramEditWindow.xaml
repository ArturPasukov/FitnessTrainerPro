<Window x:Class="FitnessTrainerPro.UI.WorkoutProgramEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrainerPro.UI"
        mc:Ignorable="d"
        Title="Программа тренировок" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"> <!-- Убрал NoResize, т.к. может быть много упражнений -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Название программы -->
            <RowDefinition Height="Auto"/> <!-- Направленность -->
            <RowDefinition Height="Auto"/> <!-- Описание -->
            <RowDefinition Height="*"/>    <!-- Секция для списка упражнений в программе (пока пусто) -->
            <RowDefinition Height="Auto"/> <!-- Кнопки OK/Отмена -->
        </Grid.RowDefinitions>

        <!-- Поля для информации о программе -->
        <StackPanel Grid.Row="0">
            <Label Content="Название программы:"/>
            <TextBox Name="ProgramNameTextBox" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label Content="Направленность (например, Сила, Масса):"/>
            <TextBox Name="ProgramFocusTextBox" Margin="0,0,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Label Content="Описание программы:"/>
            <TextBox Name="ProgramDescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Секция для управления упражнениями в программе - ДОБАВИМ ПОЗЖЕ -->
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Margin="0,0,0,10">
            <TextBlock Text="[Здесь будет список упражнений программы и кнопки для их добавления/редактирования/удаления]" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="Gray"/>
        </Border>


        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Width="80" Margin="5" IsDefault="True" Click="OkButton_Click"/>
            <Button Name="CancelButton" Content="Отмена" Width="80" Margin="5" IsCancel="True" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>