<Window x:Class="FitnessTrainerPro.UI.AnalyticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessTrainerPro.UI"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="Аналитика прогресса" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Панель выбора клиента и дат -->
            <RowDefinition Height="*"/>    <!-- График -->
            <RowDefinition Height="Auto"/> <!-- НОВАЯ СТРОКА: Кнопка Построить -->
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Клиент:" VerticalAlignment="Center"/>
            <!-- УБРАН SelectionChanged -->
            <ComboBox Name="ClientsComboBox" Width="200" Margin="5,0" VerticalAlignment="Center" DisplayMemberPath="FullName" /> 
            
            <Label Content="С:" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <!-- УБРАН SelectedDateChanged -->
            <DatePicker Name="StartDatePicker" Width="120" Margin="5,0" VerticalAlignment="Center" />
            
            <Label Content="По:" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <!-- УБРАН SelectedDateChanged -->
            <DatePicker Name="EndDatePicker" Width="120" Margin="5,0" VerticalAlignment="Center" />
        </StackPanel>

        <!-- График веса -->
        <lvc:CartesianChart Name="WeightChart" Grid.Row="1" Margin="0,0,0,10" /> <!-- Добавлен Margin -->

        <!-- НОВАЯ КНОПКА для построения графика -->
        <Button Name="PlotChartButton" Grid.Row="2" Content="Построить график" Width="150" HorizontalAlignment="Right" Click="PlotChartButton_Click"/>

    </Grid>
</Window>